<script>
function order(product){
  let text =
`السلام عليكم
أرغب بطلب المنتج التالي:

اسم المنتج: ${product}
الكمية:
العنوان:
ملاحظات:

الدفع عند الاستلام`;
  
  let phone = "9647828301518";
  let url = "https://wa.me/" + phone + "?text=" + encodeURIComponent(text);
  window.open(url, "_blank");
}
</script>

